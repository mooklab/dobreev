section.main
    div.container

        div.breadcrumbs
            a(href="index.html") Главная
            span.divide »
            span.current Мой профиль

        div.lk
        
            +lkmenu('profile')

            div.lkpage
                h2 Мой профиль

                div.profile

                    label.upload
                        input(type="file", name="")

                    form
                        span.name Иванова Светлана
                        span.title Персональные данные
                        div.name
                            input(type="text", value="Иванова")
                            input(type="text", value="Светлана")

                        div.contacts
                            input(type="email", value="mail@mail.ru")
                            input(type="tel", value="Контактный телефон")

                        span.title Изменение пароля
                        div.password
                            input(type="password", placeholder="Новый пароль")
                            input(type="password", placeholder="Повторите пароль")

                        div.buttons
                            a.more Забыл пароль
                            button Сохранить