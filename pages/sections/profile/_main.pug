section.main
    div.container

        div.breadcrumbs
            a(href="index.html") Главная
            span.divide »
            span.current Мой профиль

        div.lk
        
            +lkmenu('profile')

            div.lkpage
                h2 Мой профиль

                div.profile

                    label.upload
                        input(type="file", name="")

                    form
                        span.name Иванова Светлана
                        span.title Персональные данные
                        div.name
                            input(type="text", placeholder="Фамилия", value="Иванова", required)
                            input(type="text", placeholder="Имя", value="Светлана", required)

                        div.contacts
                            input(type="email", placeholder="E-mail", value="mail@mail.ru", required)
                            input(type="tel", placeholder="Контактный телефон", value="+7 999 210 2737", required)

                        span.title Изменение пароля
                        div.password
                            label.input: input(type="password", placeholder="Новый пароль", required)
                            label.input: input(type="password", placeholder="Повторите пароль", required)

                        div.buttons
                            a.more Забыл пароль
                            button Сохранить