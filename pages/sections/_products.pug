section(class=section_class).products
    div.container

        div.title
            h2= section_title ? section_title : 'Товары'
            - if( section_class == 'useful' )
                div.tags
                    a(href="category.html").tag Садовая техника
                    a(href="category.html").tag Инструменты для дома
                    a(href="category.html").tag Инструменты для сада
            - if( section_class != 'watched' && section_class != 'often' )
                a(href="catalog.html").more Смотреть все
            div.swiper-navigation
                div.arrow
                    include ../../images/swiper_arrow.svg
                div.arrow
                    include ../../images/swiper_arrow.svg

        div.swiper.products_swiper
            div.swiper-wrapper
                div.swiper-slide
                    +product('1', '82245637', 'Циркулярная пила Спец БЦП-1300, 1550 Вт, 185 мм', '4825', '0', 'Хит продаж', 'Новинка')
